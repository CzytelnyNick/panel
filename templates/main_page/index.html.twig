{% extends 'base.html.twig' %}
{% block head %}
    <head>
        <title>Sklep</title>

        {% block stylesheets %}
            <style>
               
                .products__element-description {
                    font-size: 14px;
                }
                .products__element-image {
                    width: 100px;
                    height: 100px;
                }
            </style>
        {% endblock %}
    </head>
{% endblock %}
{% block body %}

    <h1>Witaj!</h1>

    <br>
    <!-- Slider main container -->

            {% for product in products %}

                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ "/uploads/" ~ product.attachment }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.title }}</h5>
                        <div class="card-text"><p class="products__element-description">{{ product.description }}</p></div>
                        <a href="{{ path('products', {id: product.id}) }}"><button class="btn btn-primary">Więcej Informacji</button></a>
                        {% if(is_granted("ROLE_ADMIN"))%}
                            <a href="{{ path("admin_product_delete", {id: product.id}) }}"><button class="btn btn-danger">Usuń</button></a>
                        {% endif %}
                    </div>
                </div>
                <br>
            {% endfor %}







{% endblock %}