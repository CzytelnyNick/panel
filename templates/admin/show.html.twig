{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

            {% for user in users %}
            <tr class="table-light">
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.email }}</td>
            <td><a href="{{  path('admin_delete', {id:user.id}) }}"><button class="btn btn-danger">Usuń użytkownika</button></a></td>
            </tr>
                {% endfor %}


        </tbody>
    </table>




{% endblock %}